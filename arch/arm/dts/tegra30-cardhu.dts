/dts-v1/;

#include "tegra30.dtsi"

/ {
	model = "NVIDIA Cardhu";
	compatible = "nvidia,cardhu", "nvidia,tegra30";

	chosen {
		stdout-path = &uarta;
	};

	aliases {
		mmc0 = "/sdhci@78000600";
		mmc1 = "/sdhci@78000000";
	};

	memory {
		device_type = "memory";
		reg = <0x80000000 0x40000000>;
	};

	sdhci@78000000 {
		status = "okay";
		cd-gpios = <&gpio TEGRA_GPIO(I, 5) GPIO_ACTIVE_LOW>;
		wp-gpios = <&gpio TEGRA_GPIO(T, 3) GPIO_ACTIVE_HIGH>;
		power-gpios = <&gpio TEGRA_GPIO(D, 7) GPIO_ACTIVE_HIGH>;
		bus-width = <4>;
	};

	sdhci@78000600 {
		status = "okay";
		bus-width = <8>;
		non-removable;
	};

	clocks {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		clk32k_in: clock@0 {
			compatible = "fixed-clock";
			reg=<0>;
			#clock-cells = <0>;
			clock-frequency = <32768>;
		};
	};
};

&uarta {
	status = "okay";
};
